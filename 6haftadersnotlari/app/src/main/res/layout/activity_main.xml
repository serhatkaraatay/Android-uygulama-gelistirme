<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/zaman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Zaman: 15"
        android:textColor="#700707"
        android:textSize="35sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/skor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="SKOR : 0"
        android:textColor="#06675F"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zaman" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="306dp"
        android:layout_height="314dp"
        android:layout_marginTop="132dp"
        app:layout_constraintEnd_toEndOf="@+id/skor"
        app:layout_constraintStart_toStartOf="@+id/skor"
        app:layout_constraintTop_toBottomOf="@+id/skor">

        <ImageView
            android:id="@+id/top1"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:onClick="skorartir"
            android:padding="5dp"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/top3" />

        <ImageView
            android:id="@+id/top2"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:onClick="skorartir"
            android:padding="5dp"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/top3" />

        <ImageView
            android:id="@+id/top3"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:onClick="skorartir"
            android:padding="5dp"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/top3" />

        <ImageView
            android:id="@+id/top4"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:onClick="skorartir"
            android:padding="5dp"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/top3" />

        <ImageView
            android:id="@+id/top5"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:onClick="skorartir"
            android:padding="5dp"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/top3" />

        <ImageView
            android:id="@+id/top6"
            android:layout_width="103dp"
            android:layout_height="97dp"
            android:onClick="skorartir"
            android:padding="5dp"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/top3" />

        <ImageView
            android:id="@+id/top7"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:onClick="skorartir"
            android:padding="5dp"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/top3" />

        <ImageView
            android:id="@+id/top8"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:onClick="skorartir"
            android:padding="5dp"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/top3" />

        <ImageView
            android:id="@+id/top9"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:onClick="skorartir"
            android:padding="5dp"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/top3" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>